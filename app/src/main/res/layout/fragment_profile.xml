<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:layout="http://schemas.android.com/tools"
    android:id="@id/dialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_profile"
        app:title="@string/title_profile"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <include layout="@layout/common_profile"/>

    <Button
        android:id="@+id/bt_become_counselor"
        android:layout_below="@id/fl_profile"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:text="Become Counselor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
